# Custom button
#<Button@Button>:
#    font_size: 48
 
# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
    id: calculator
    displaybin: binary_result
	displayhex: hexadecimal_result
	displaydec: decimal_result
	display: entry
	#size: 400, 4000
    rows: 10
    padding: 10
    spacing: 10
 
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: binary_result
            multiline: False
			text: "binary result will start with 0b"
    BoxLayout:
        TextInput:
            id: hexadecimal_result
            multiline: False
			text: "hexadecimal result start with 0x"		
    BoxLayout:
        TextInput:
            id: decimal_result
            multiline: False
			text: "decimal result start with nothing"				
    BoxLayout:
        TextInput:
            id: entry
            multiline: False


    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        Button:
            text: "7"
            on_press: entry.text += self.text
        Button:
            text: "8"
            on_press: entry.text += self.text
        Button:
            text: "9"
            on_press: entry.text += self.text
        Button:
            text: "+"
            on_press: entry.text += self.text
        Button:
            text: "A"
            on_press: entry.text += self.text
 
    BoxLayout:
        spacing: 10
        Button:
            text: "4"
            on_press: entry.text += self.text
        Button:
            text: "5"
            on_press: entry.text += self.text
        Button:
            text: "6"
            on_press: entry.text += self.text
        Button:
            text: "-"
            on_press: entry.text += self.text
        Button:
            text: "B"
            on_press: entry.text += self.text
 
    BoxLayout:
        spacing: 10
        Button:
            text: "1"
            on_press: entry.text += self.text
        Button:
            text: "2"
            on_press: entry.text += self.text
        Button:
            text: "3"
            on_press: entry.text += self.text
        Button:
            text: "*"
            on_press: entry.text += self.text
        Button:
            text: "C"
            on_press: entry.text += self.text
 
    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10
        Button:
            text: "Clear"
            on_press: entry.text = ""
			on_press: binary_result.text="binary result will show here"
			on_press: hexadecimal_result.text="hexadecimal result will show here"		
            on_press: decimal_result.text="decimal result start with nothing"				
        Button:
            text: "0"
            on_press: entry.text += self.text
        Button:
            text: "RUN"
            on_press: calculator.calculate(entry.text) ############################Learn it
        Button:
            text: "/"
            on_press: entry.text += self.text
        Button:
            text: "D"
            on_press: entry.text += self.text
    BoxLayout: 
	    spacing: 10
	    Button:
            text: "<-"
            on_press: entry.text = entry.text[:-1]
        Button:
            text: "0b"
            on_press: entry.text += self.text
        Button:
            text: "0x"
            on_press: entry.text += self.text
        Button:
            text: "&"
            on_press: entry.text += self.text
        Button:
            text: "E"
            on_press: entry.text += self.text
    BoxLayout: 
	    spacing: 10
	    Button:
            text: "<<-"
            on_press: entry.text = entry.text[:-2]
        Button:
            text: "("
            on_press: entry.text += self.text
        Button:
            text: ")"
            on_press: entry.text += self.text
        Button:
            text: "|"
            on_press: entry.text += self.text
        Button:
            text: "F"
            on_press: entry.text += self.text